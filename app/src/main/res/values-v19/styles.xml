<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="DayTheme" parent="@style/AppTheme">


        <item name="main_bg">@color/main_background_day</item>
        <item name="border_onchose">@color/border_onchose_day</item>
        <item name="main_bg_deep">@color/main_background_deep_day</item>
        <item name="item_bg">@color/item_background_day</item>
        <item name="item_bg_deep">@color/item_background_deep_day</item>
        <item name="main_textcolor">@color/color_textcolor_primary_day</item>
        <item name="secondary_textcolor">@color/color_textcolor_secondary_day</item>
        <item name="item_shape">@drawable/corners_bg_day</item>
        <item name="shape_select">@drawable/corners_selector_day</item>
        <item name="shape_bg">@drawable/corners_bg_day</item>
        <item name="shape_tablebg">@drawable/corners_tablebg_day</item>
        <item name="shape_popmenu">@drawable/shape_popmenu_day</item>
        <item name="item_select">@drawable/photo_selector_day_withoutshape</item>
        <item name="corners_leftbot">@drawable/corners_leftbot_day</item>
        <item name="corners_lefttop">@drawable/corners_lefttop_day</item>
        <item name="corners_rightbot">@drawable/corners_rightbot_day</item>
        <item name="corners_righttop">@drawable/corners_righttop_day</item>
        <item name="android:popupMenuStyle">@style/Theme.PopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenu.TextAppearanceLarge</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenu.TextAppearanceSmall</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popmenu_item_select">@drawable/item_selector_day</item>
        <item name="navifagionView">@style/navifagionView_day</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/color_primary_light_day</item>
        <item name="colorPrimary">@color/color_primary_day</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_day</item>
        <item name="colorPrimaryLight">@color/color_primary_light_day</item>
        <item name="mToolBarTextColor">@color/toolbar_textcolor_day</item>
        <item name="title_changecolor">@color/color_primary_light_day</item>
        <item name="mcolorAccent">@color/color_accent_day</item>
    </style>
    <style name="NightTheme" parent="@style/AppTheme">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="border_onchose">@color/border_onchose_night</item>
        <item name="main_bg">@color/main_background_night</item>
        <item name="main_bg_deep">@color/main_background_deep_night</item>
        <item name="item_bg">@color/item_background_night</item>
        <item name="item_bg_deep">@color/item_background_deep_night</item>
        <item name="main_textcolor">@color/color_textcolor_primary_night</item>
        <item name="secondary_textcolor">@color/color_textcolor_secondary_night</item>
        <item name="item_shape">@drawable/corners_bg_night</item>
        <item name="shape_select">@drawable/corners_selector_night</item>
        <item name="shape_bg">@drawable/corners_bg_night</item>
        <item name="shape_popmenu">@drawable/shape_popmenu_night</item>
        <item name="shape_tablebg">@drawable/corners_tablebg_night</item>
        <item name="item_select">@drawable/photo_selector_night_withoutshape</item>
        <item name="corners_leftbot">@drawable/corners_leftbot_night</item>
        <item name="corners_lefttop">@drawable/corners_lefttop_night</item>
        <item name="corners_rightbot">@drawable/corners_rightbot_night</item>
        <item name="corners_righttop">@drawable/corners_righttop_night</item>
        <item name="popmenu_item_select">@drawable/item_selector_night</item>
        <item name="android:popupMenuStyle">@style/Theme.PopupMenu</item>

        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenu.TextAppearanceLarge</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenu.TextAppearanceSmall</item>

        <item name="navifagionView">@style/navifagionView_night</item>
        <item name="android:textColorPrimary">@color/color_textcolor_primary_night</item>
        <item name="android:textColorSecondary">@color/color_textcolor_secondary_night</item>
        <item name="colorPrimaryLight">@color/color_primary_light_night</item>
        <item name="colorPrimary">@color/color_primary_night</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_night</item>
        <item name="mcolorAccent">@color/color_accent_night</item>
        <item name="mToolBarTextColor">@color/toolbar_textcolor_night</item>
        <item name="title_changecolor">@color/toolight_blue</item>
    </style>

    <style name="Theme.PopupMenu"
        parent="@android:style/Widget.ListPopupWindow">
        <item name="android:popupBackground">@color/btnblack</item>
    </style>

    <style name="PopupMenu.TextAppearanceLarge" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">?attr/item_bg_deep</item>
    </style>

    <style name="PopupMenu.TextAppearanceSmall" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">?attr/item_bg_deep</item>
    </style>

    <style name="PopupAnimationTop">
        <item name="android:windowEnterAnimation">@anim/popmenu_ani_in_top</item>
        <item name="android:windowExitAnimation">@anim/popmenu_ani_out_top</item>
    </style>

    <style name="PopupAnimationBottom">
        <item name="android:windowEnterAnimation">@anim/popmenu_ani_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/popmenu_ani_out_bottom</item>
    </style>

    <style name="PopupAnimationTopRight">
        <item name="android:windowEnterAnimation">@anim/popmenu_ani_in_top_right</item>
        <item name="android:windowExitAnimation">@anim/popmenu_ani_out_top_right</item>
    </style>

    <style name="PopupAnimationBottomRight">
        <item name="android:windowEnterAnimation">@anim/popmenu_ani_in_bottom_right</item>
        <item name="android:windowExitAnimation">@anim/popmenu_ani_out_bottom_right</item>
    </style>
    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:maxHeight">25.0dip</item>
    </style>

    <style name="navifagionView_day">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/color_textcolor_secondary_night</item>
    </style>

    <style name="navifagionView_night">
        <item name="android:textColorPrimary">@color/color_textcolor_primary_night</item>
        <item name="android:textColorSecondary">@color/color_textcolor_secondary_night</item>
    </style>

</resources>
