<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="DayTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="main_bg">@color/main_background_day</item>
        <item name="main_bg_deep">@color/main_background_deep_day</item>
        <item name="item_bg">@color/item_background_day</item>
        <item name="item_bg_deep">@color/item_background_deep_day</item>
        <item name="main_textcolor">@color/main_textcolor_day</item>
        <item name="item_shape">@drawable/corners_bg_day</item>
        <item name="shape_select">@drawable/corners_selector_day</item>
        <item name="shape_bg">@drawable/corners_bg_day</item>
        <item name="shape_tablebg">@drawable/corners_tablebg_day</item>

        <item name="corners_leftbot">@drawable/corners_leftbot_day</item>
        <item name="corners_lefttop">@drawable/corners_lefttop_day</item>
        <item name="corners_rightbot">@drawable/corners_rightbot_day</item>
        <item name="corners_righttop">@drawable/corners_righttop_day</item>
    </style>
    <style name="NightTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="main_bg">@color/main_background_night</item>
        <item name="main_bg_deep">@color/main_background_deep_night</item>
        <item name="item_bg">@color/item_background_night</item>
        <item name="item_bg_deep">@color/item_background_deep_night</item>
        <item name="main_textcolor">@color/main_textcolor_night</item>
        <item name="item_shape">@drawable/corners_bg_night</item>
        <item name="shape_select">@drawable/corners_selector_night</item>
        <item name="shape_bg">@drawable/corners_bg_night</item>
        <item name="shape_tablebg">@drawable/corners_tablebg_night</item>

        <item name="corners_leftbot">@drawable/corners_leftbot_night</item>
        <item name="corners_lefttop">@drawable/corners_lefttop_night</item>
        <item name="corners_rightbot">@drawable/corners_rightbot_night</item>
        <item name="corners_righttop">@drawable/corners_righttop_night</item>
    </style>
</resources>
