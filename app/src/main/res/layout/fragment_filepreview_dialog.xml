<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?shape_popmenu">

    <TableRow
        android:id="@+id/tr_filepreview_1"
        android:layout_margin="1dp"
        android:background="?shape_select"
        android:clickable="true"
        android:padding="2dp" >

        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_corner_radius="5dip"
            android:id="@+id/iv_filepreview_1"
            android:layout_width="@dimen/filepreview_img_size"
            android:layout_height="@dimen/filepreview_img_size"
            android:contentDescription="@string/img_description"
            android:scaleType="centerCrop" />

        <TextView
            android:textColor="?main_textcolor"
            android:id="@+id/tv_filepreview_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:maxLines="2"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:paddingTop="5dp"
            android:textSize="12sp" />
    </TableRow>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/main_bg" />
    <TableRow
        android:id="@+id/tr_filepreview_2"
        android:layout_margin="1dp"
        android:background="?shape_select"
        android:clickable="true"
        android:padding="2dp" >

        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_corner_radius="5dip"
            android:id="@+id/iv_filepreview_2"
            android:layout_width="@dimen/filepreview_img_size"
            android:layout_height="@dimen/filepreview_img_size"
            android:contentDescription="@string/img_description"
            android:scaleType="centerCrop" />

        <TextView
            android:textColor="?main_textcolor"
            android:id="@+id/tv_filepreview_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:maxLines="2"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:paddingTop="5dp"
            android:textSize="12sp" />
    </TableRow>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/main_bg" />
    <TableRow
        android:id="@+id/tr_filepreview_3"
        android:layout_margin="1dp"
        android:background="?shape_select"
        android:clickable="true"
        android:padding="2dp" >

        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_corner_radius="5dip"
            android:id="@+id/iv_filepreview_3"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/filepreview_img_size"
            android:layout_height="@dimen/filepreview_img_size"
            android:contentDescription="@string/img_description"
            />

        <TextView
            android:textColor="?main_textcolor"
            android:id="@+id/tv_filepreview_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:maxLines="2"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:paddingTop="5dp"
            android:textSize="12sp" />
    </TableRow>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/main_bg" />
    <TableRow
        android:id="@+id/tr_filepreview_4"
        android:layout_margin="1dp"
        android:background="?shape_select"
        android:clickable="true"
        android:padding="2dp" >

        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_corner_radius="5dip"
            android:id="@+id/iv_filepreview_4"
            android:layout_width="@dimen/filepreview_img_size"
            android:layout_height="@dimen/filepreview_img_size"
            android:contentDescription="@string/img_description"
            android:scaleType="centerCrop" />

        <TextView
            android:textColor="?main_textcolor"
            android:id="@+id/tv_filepreview_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:maxLines="2"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:paddingTop="5dp"
            android:textSize="12sp" />
    </TableRow>

</TableLayout>