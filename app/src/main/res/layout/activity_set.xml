<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:background="?attr/main_bg">
    <android.support.v7.widget.Toolbar
        android:paddingTop="15dp"
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="false"
        tl:popupTheme="@style/ThemeOverlay.AppCompat.Dark">
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_below="@+id/id_toolbar"
        android:id="@+id/rl_set_night"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="?shape_select" >

        <TextView
            android:textColor="?main_textcolor"
            android:id="@+id/tv__set_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingTop="10dp"
            android:text="@string/night"
            android:textSize="17sp" />

        <com.changhong.ttfileplore.view.ToggleButton
            android:id="@+id/tb_setnight"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
         />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_set_showhide"
        android:layout_below="@+id/rl_set_night"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="?shape_select" >

        <TextView
            android:textColor="?main_textcolor"
            android:id="@+id/tv_set_showhide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingTop="10dp"
            android:text="@string/sethide"
            android:textSize="17sp" />

        <com.changhong.ttfileplore.view.ToggleButton
            android:id="@+id/tb_showhide"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_set_showhide"
        android:id="@+id/rl_set_setshare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="?shape_select" >

        <TextView
            android:textColor="?main_textcolor"
            android:id="@+id/tv_set_setshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingTop="10dp"
            android:text="@string/setshare"
            android:textSize="17sp" />

        <com.changhong.ttfileplore.view.ToggleButton
            android:id="@+id/tb_setshare"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
          />
    </RelativeLayout>

</RelativeLayout>