<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?shape_select"
    android:orientation="horizontal"
    android:paddingBottom="0dp"
    android:paddingTop="0dp">

    <com.makeramen.roundedimageview.RoundedImageView
        app:riv_corner_radius="5dip"
        android:padding="1dp"
        android:background="?item_shape"
        android:id="@+id/im_sharefile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="5dp"
        android:scaleType="centerInside"
        android:contentDescription="@string/img_description" />

    <TextView
        android:textColor="?main_textcolor"
        android:id="@+id/tv_share_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/im_sharefile"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="3dp"
        android:textSize="16sp" />

    <TextView
        android:textColor="?main_textcolor"
        android:id="@+id/tv_share_fileurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_share_filename"
        android:layout_marginEnd="2dp"
        android:layout_alignStart="@+id/tv_share_filename"
        android:layout_toEndOf="@+id/im_sharefile"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="3dp"
        android:textSize="12sp" />

</RelativeLayout>