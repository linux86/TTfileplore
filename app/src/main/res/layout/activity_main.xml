<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mDrawerLayout"
    >
    <LinearLayout
        android:id="@+id/id_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:paddingTop="15dp"
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/mcolorPrimary"
        android:fitsSystemWindows="false"
        >
        </android.support.v7.widget.Toolbar>
      <!--  tl:popupTheme="@style/ThemeOverlay.AppCompat.Dark" -->
    <TableLayout
        android:background="?mcolorPrimary"
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:paddingBottom="3dp" >

            <com.changhong.ttfileplore.view.ColorTrackView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                tl:progress="1"
                tl:text="@string/titlename_1"
                tl:text_change_color="@color/toolight_blue"
                tl:text_origin_color="?attr/mToolBarTextColor"
                tl:text_size="@dimen/title_textsize" />

            <com.changhong.ttfileplore.view.ColorTrackView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                tl:text="@string/titlename_2"
                tl:text_change_color="@color/toolight_blue"
                tl:text_origin_color="?attr/mToolBarTextColor"
                tl:text_size="@dimen/title_textsize" />
        </TableRow>

        <TableRow
            android:layout_height="2dp"
            android:layout_width="match_parent">

            <com.changhong.ttfileplore.view.ColorCursorView
                android:id="@+id/cursor_1"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:contentDescription="@string/img_description"
                tl:change_color="@color/toolight_blue"
                tl:progress="1"
                android:visibility="visible"/>

            <com.changhong.ttfileplore.view.ColorCursorView
                android:id="@+id/cursor_2"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:contentDescription="@string/img_description"
                tl:change_color="@color/toolight_blue"
                android:visibility="visible"/>
        </TableRow>
    </TableLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tableLayout1" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/id_nv_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false"
        tl:headerLayout="@layout/header_just_username"
        tl:menu="@menu/menu_main"
        />

</android.support.v4.widget.DrawerLayout>